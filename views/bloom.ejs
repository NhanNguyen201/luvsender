<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/heart.jpg">
    <meta itemprop="name" content="Love sender">
    <meta itemprop="image" content=<%= locals.metaImg %>>
    <meta name="description" content='<%= locals.quote %>'>
    <!-- fb -->
    <meta property="og:type" content="Website">
    <meta property="og:title" content="Love sender">
    <meta property="og:image" content=<%= locals.metaImg %>>
    <title><%= locals.quote %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: sans-serif;
            overflow: hidden;
        }
        
        #app, canvas {
            position: absolute;
            height: 100%;
            width: 100%;
        }
        
    </style>
</head>
<body>
    <canvas id="app"></canvas>
    <script type='text/javascript' src="./gsap.min.js"></script>
    <script type='text/javascript' src="./opentype.min.js"></script>

    <script type='text/javascript' src="./three.min.js"></script>
    <script type='text/javascript' src="./GeometryUtils.js"></script>
    <script type='text/javascript' src="./OrbitControls.js"></script>
    <script type='text/javascript' src="./TTFLoader.js"></script>
    <% if (locals.imageUrl) { %>
        <script type='text/javascript' src="./EffectComposer.js"></script>
        <script type='text/javascript' src="./RenderPass.js"></script>
        <script type='text/javascript' src="./CopyShader.js"></script>
        <script type='text/javascript' src="./ShaderPass.js"></script>
        <script type='text/javascript' src="./LuminosityHighPassShader.js"></script>
        <script type='text/javascript' src="./UnrealBloomPass.js"></script>

        <script type='text/javascript' src="./bloomApp.js"></script>
        <script>
            let img = '<%=locals.imageUrl%>'
            const scene = new App(img)
        </script>
    <% }  else {%>
        <script type='text/javascript' src="./notFound.js"></script>
        <script>
            const scene = new NotFoundApp();
         </script>
    <% } %>
    <script >
        document.addEventListener("DOMContentLoaded", e => {
            scene.init();
        })
        console.log('<%- JSON.stringify(locals.quote) %>')
    </script>
</body>
</html>